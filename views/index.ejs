<html>

<head>

    <title>Page Title</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="css/map.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--This is where we place the naver map api link-->
        <script type="text/javascript" src="https://openapi.map.naver.com/openapi/v3/maps.js?ncpClientId=8mn3xzptkk"></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <style>
        h1 {
            font-size: 30px;
            font-weight: 900;
        }
    </style>
</head>

<body>
    <div>
        <nav id="nav1">
            <ul>
                <img src="img/everytime.png" id="everytime-img" alt="My Image">
                <li><button id="home-button"><a href="#home">Home</a></button></li>
                <li><button id="login-button"><a href="/html/login.html">Let's
                            Meet</a></button></li>
                <li><button id="timetable-button"><a href="#timetable">Timetable</a></button></li>
                <li><button id="map-button"><a href="#map">Map</a></button></li>
            </ul>
        </nav>
    </div>

    <!-- Home Section Start -->
    <section class="home-section" id="home">
        <div class="text">
            <h1>Hard to make time with people?</h1>
            <h1><span style="color:#ce280f">Try us</span></h1>
        </div>
        <div class="arrow">
            <a href="#timetable" class="scroll-down">
                <img src="img/arrow-down.png" id="arrow-down-img" alt="scroll Down">
            </a>
        </div>
    </section>
    <!-- Home Section End -->

    <!-- TimeTable Section Start -->
    <section class="timetable-section" id="timetable">
        <div class="display">
            <div class="timetable-example">
                Timetable Example
            </div>
            <div class="friendlist-example">
                <div class="list-title d-flex">
                    <span class="me-auto"><strong>Friends</strong></span>
                    <button id="confirm">CONFIRM</button>
                </div>
                <div class="list">
                    <ul>
                        <li class="d-flex"><span class="me-auto">Friend1</span><input type="checkbox"></li>
                        <li class="d-flex"><span class="me-auto">Friend2</span><input type="checkbox"></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- TimeTable Section End -->

    <!-- Map Section Start -->
    <section class="map-section" id="map">
        <div class="display">

            <!-- 네이버 지도가 뿌려질 곳 !  -->
        <section id="mapSection">
            <div id="mapWrapper">
                <div id="meetTitle">
                    Where do you want to hang out?
                </div>
                <div id="filter">
                    <button id="box0"  value="All" onclick="markerDisplay('All')">All</button>
                    <button id="box1" value="Food" onclick="markerDisplay('Food')">Food</button>
                    <button id="box2" value="Cafe" onclick="markerDisplay('Cafe')">Cafe</button>
                    <button id="box3" value="Activities" onclick="markerDisplay('Activities')">Activities</button>
                    <button id="box4" value="Alcohol" onclick="markerDisplay('Beverages')">Beverages</button>
                
                </div>

                <div id="map" style="width:100%;height:75vh; margin: 0 auto;"></div>

                <div id="currentList">
                    <p>Hang out Course</p>

                <div id="stage">
                    </div>  
                    <div id="edit">
                        <button id="remove" onclick="Remove()">Remove</button>
                        <button id="confirm" onclick="Confirm()">Confirm</button>
                    </div>
                
                    
                    <section id="schedule">
                    
                    </section>
                
                </div>
                
                
            </div>
        </section>


        </div>
    </section>
    <!-- Map Section End -->


    <script>

    </script>
