        subs = JSON.parse(subs);

        for (let i = 0; i < 5; i++) { //월,화,수,목,금
            let a = subs[i]
            console.log('subs[i]:', a);
            for (let j = 0; j < subs[i].length; j++) {
                console.log("length: ", subs[i].length);
                console.log('a[j]: ', a[j]);
                let heightPercent = a[j].height / 50 * 100;
                let topPercent = (a[j].top - 450) / 50 * 100;

                let newDiv = document.createElement("div");
                newDiv.style.cssText = 'position:absolute;background-color:aqua;width:100%;top:' + topPercent + '%;height:' + heightPercent + '%';


                div[i + 1].appendChild(newDiv);

            }
        }
        //console.log(subs);


        ///////button confirm add event listener ////////
